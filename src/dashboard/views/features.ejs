<!DOCTYPE html>
<html>
<head>
    <title>Features - <%= guild.name %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="dashboard-container">
        <div class="sidebar">
            <div class="logo">
                <img src="/img/logo.png" alt="Logo">
                <span>Z1-Zone</span>
            </div>
            <nav>
                <a href="/guild/<%= guild.id %>">
                    <i class="fas fa-home"></i>
                    Dashboard
                </a>
                <a href="/guild/<%= guild.id %>/features" class="active">
                    <i class="fas fa-puzzle-piece"></i>
                    Features
                </a>
                <a href="/guild/<%= guild.id %>/settings">
                    <i class="fas fa-cog"></i>
                    Settings
                </a>
            </nav>
        </div>

        <div class="main-content">
            <div class="top-bar glass-effect">
                <div class="server-info">
                    <img src="<%= guild.icon ? `https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}.png` : '/img/default_guild.png' %>" 
                         alt="<%= guild.name %>">
                    <h2><%= guild.name %></h2>
                </div>
                <div class="search-bar">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Search features...">
                </div>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <h4>Active Features</h4>
                    <div class="value">12</div>
                </div>
                <div class="stat-card">
                    <h4>Total Commands</h4>
                    <div class="value">24</div>
                </div>
                <div class="stat-card">
                    <h4>Members</h4>
                    <div class="value"><%= guild.memberCount %></div>
                </div>
            </div>

            <div class="features-panel">
                <h1>Features Panel</h1>
                <p>Discover, Learn, And Customize the Powerful Features of Dishub</p>
                <div class="buttons">
                    <button class="btn btn-primary">
                        <i class="fas fa-compass"></i>
                        Discover
                    </button>
                    <button class="btn btn-secondary">
                        <i class="fas fa-play"></i>
                        Watch Tutorial
                    </button>
                </div>
            </div>

            <div class="features-list">
                <div class="feature-card">
                    <div class="feature-status"></div>
                    <h3>Auto Kill Kane</h3>
                    <p>Kill Kane when he joined the server</p>
                    <div class="feature-actions">
                        <button class="btn btn-configure">
                            <i class="fas fa-cog"></i>
                            Configure
                        </button>
                        <button class="btn btn-disable">
                            <i class="fas fa-power-off"></i>
                            Disable
                        </button>
                    </div>
                </div>
                <!-- Ajoutez d'autres cartes de fonctionnalités ici -->
            </div>
        </div>
    </div>

    <script src="https://kit.fontawesome.com/your-kit-code.js"></script>
    <script>
        // Animations des cartes au défilement
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        });

        document.querySelectorAll('.feature-card').forEach(card => {
            observer.observe(card);
        });
    </script>
</body>
</html> 