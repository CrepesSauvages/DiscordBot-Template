<!DOCTYPE html>
<html>
<head>
    <title>Commandes - <%= guild.name %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="dashboard-container">
        <div class="sidebar">
            <div class="logo">
                <img src="/img/logo.png" alt="Logo">
                <span>Z1-Zone</span>
            </div>
            <nav>
                <a href="/guild/<%= guild.id %>">
                    <i class="fas fa-home"></i>
                    Dashboard
                </a>
                <a href="/guild/<%= guild.id %>/commands" class="active">
                    <i class="fas fa-terminal"></i>
                    Commandes
                </a>
                <a href="/guild/<%= guild.id %>/settings">
                    <i class="fas fa-cog"></i>
                    Param√®tres
                </a>
            </nav>
        </div>

        <div class="main-content">
            <div class="top-bar glass-effect">
                <div class="server-info">
                    <img src="<%= guild.icon ? `https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}.png` : '/img/default_guild.png' %>" 
                         alt="<%= guild.name %>">
                    <h2><%= guild.name %></h2>
                </div>
                <div class="search-bar">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Rechercher une commande...">
                </div>
            </div>

            <% Object.entries(commandsByCategory).forEach(([category, commands]) => { %>
                <div class="category-section">
                    <h2 class="category-title"><%= category %></h2>
                    <div class="commands-grid">
                        <% commands.forEach(command => { %>
                            <div class="command-card" data-name="<%= command.name %>">
                                <div class="command-header">
                                    <h3>/<%= command.name %></h3>
                                    <div class="command-toggle">
                                        <input type="checkbox" 
                                               id="toggle-<%= command.name %>" 
                                               <%= command.enabled ? 'checked' : '' %>
                                               data-command="<%= command.name %>">
                                        <label for="toggle-<%= command.name %>"></label>
                                    </div>
                                </div>
                                <p class="command-description"><%= command.description %></p>
                                <% if (command.permissions && command.permissions.length > 0) { %>
                                    <div class="command-permissions">
                                        <h4>Permissions requises:</h4>
                                        <ul>
                                            <% command.permissions.forEach(perm => { %>
                                                <li><%= perm %></li>
                                            <% }); %>
                                        </ul>
                                    </div>
                                <% } %>
                            </div>
                        <% }); %>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="https://kit.fontawesome.com/your-kit-code.js"></script>
    <script src="/js/commands.js"></script>
</body>
</html> 